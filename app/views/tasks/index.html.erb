<h1>My Tasks</h1>
<ul style="list-style: none;">
  <% @tasks.each do |task| %>
    <li><% if task.completed == true %></li>
      <li><%= link_to "[X]"  + " " + task.title, task_path(task) %></li>
    <li><% else %></li>
      <li><%= link_to "[  ]"  + " " + task.title, task_path(task) %></li>
    <li><% end %></li>
  <% end %>
</ul>

<%= link_to "Create a new task", new_task_path %>